<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.VideoMapper">
<resultMap id="baseMap" type="com.demo.entity.Video">
        <id column="id" jdbcType="INTEGER" property="id" />
</resultMap>
<select id="getByPage"  resultMap="baseMap">
	SELECT * FROM Video where 1=1
	<if test="title != null and title != ''">
		and title = #{title}
	</if>
	order by ctime
</select>
<select id="searchById"  resultMap="baseMap">
	SELECT * FROM Video where id=#{id}
</select>
<insert id="insert" parameterType="com.demo.entity.Video">
insert into Video(title, content, video,ctime) 
values(#{title}, #{content}, #{video},now());
</insert>
<delete id="delete" parameterType="java.lang.Integer" >
    delete from Video where id = #{id}
  </delete>

<update id="updateById">
	update Video SET title=#{title}, content=#{content}
	<if test="video != null and video != ''">,video=#{video}</if>
	 where id=#{id} 
</update>

</mapper>