<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.NewsMapper">
<resultMap id="baseMap" type="com.demo.entity.News">
        <id column="id" jdbcType="INTEGER" property="id" />
</resultMap>
<select id="getByPage"  resultMap="baseMap">
	SELECT * FROM News where 1=1
	<if test="uid != null and uid != ''">
		and uid = #{uid}
	</if>
	order by ctime
</select>
<select id="searchById"  resultMap="baseMap">
	SELECT * FROM News where id=#{id}
</select>
<insert id="insert" parameterType="com.demo.entity.News">
insert into News(title,content,pic, ctime) 
values(#{title},#{content},#{pic}, now());
</insert>
<delete id="delete" parameterType="java.lang.Integer" >
    delete from News where id = #{id}
  </delete>

<update id="updateById">
	update News SET title=#{title},content=#{content}
	<if test="pic != null and pic != ''">,pic=#{pic}</if>
	 where id=#{id} 
</update>

</mapper>