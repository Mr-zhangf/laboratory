<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.ArticleMapper">
<resultMap id="baseMap" type="com.demo.entity.Article">
        <id column="id" jdbcType="INTEGER" property="id" />
</resultMap>
<select id="getByPage"  resultMap="baseMap">
	SELECT * FROM Article where 1=1
	<if test="type != null and type != ''">
		and type = #{type}
	</if>
	order by ctime
</select>
<select id="searchById"  resultMap="baseMap">
	SELECT * FROM Article where id=#{id}
</select>
<insert id="insert" parameterType="com.demo.entity.Article">
insert into Article(type, content,ctime) 
values(#{type}, #{content},now());
</insert>
<delete id="delete" parameterType="java.lang.Integer" >
    delete from Article where id = #{id}
  </delete>

<update id="updateById">
	update Article SET type=#{type}, content=#{content}
	<if test="file != null and file != ''">,file=#{file}</if>
	 where id=#{id} 
</update>

</mapper>