<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.NoticeMapper">
<resultMap id="baseMap" type="com.demo.entity.Notice">
        <id column="id" jdbcType="INTEGER" property="id" />
</resultMap>
<select id="getByPage"  resultMap="baseMap">
	SELECT * FROM Notice where 1=1
	<if test="title != null and title != ''">
		and title = #{title}
	</if>
	order by ctime
</select>
<select id="searchById"  resultMap="baseMap">
	SELECT * FROM Notice where id=#{id}
</select>
<insert id="insert" parameterType="com.demo.entity.Notice">
insert into Notice( title,content ,ctime) 
values( #{title},#{content} ,now());
</insert>
<delete id="delete" parameterType="java.lang.Integer" >
    delete from Notice where id = #{id}
  </delete>

<update id="updateById">
	update Notice SET  title=#{title},content=#{content} 
	 where id=#{id} 
</update>

</mapper>